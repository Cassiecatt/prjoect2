<div class="tm-section tm-bg-img" id="tm-section-1">
    <div class="tm-bg-white ie-container-width-fix-2">
        <div class="container ie-h-align-center-fix">
            <div class="row">
                <div class="col-xs-12 ml-auto mr-auto ie-container-width-fix">
                    <form class="tm-search-form tm-section-pad-2" id="listing-form">
                        <input type="hidden" name="post-id" value="{{post.id}}" />
                        <div>
                            <h3>Edit Listing</h3>
                            <label for="post-title">Job Title:</label>
                            <input type="text" id="post-title" name="post-title" value="{{post.title}}" />
                        </div>
                        <div>
                            <label for="post-description">Description:</label>
                            <input type="text" id="post-description" name="post-description" value="{{post.description}}" />
                        </div>
                        <div>
                            <label for="post-salary">Salary:</label>
                            <input type="text" id="post-salary" name="post-salary" value="{{post.salary}}" />
                        </div>
                        <div>
                            <label for="post-category">Category:</label>
                            <input type="number" id="post-category" name="post-category" value="{{category.category_id}}" />
                        </div>
                        <div>
                            <button type="submit" class="btn-primary tm-btn-primary" id="edit-button">Update</button>
                        </div>
                        <div>
                            <button type="button" class="btn-primary tm-btn-primary" id="delete-button">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/edit-post.js"></script>
