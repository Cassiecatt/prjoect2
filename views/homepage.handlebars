<div class="tm-section tm-bg-img" id="tm-section-1">
    <div class="tm-bg-white ie-container-width-fix-2">
        <div class="container ie-h-align-center-fix">
            <div class="row">
                <div class="col-xs-12 ml-auto mr-auto ie-container-width-fix">
                    <div class="jumbotron jumbotron-fluid bg-white">
                        <div class="container">
                            <h1 class="text-monospace">Looking for a new job?</h1>
                            <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of
                                its parent.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="tm-section-2">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h2 class="tm-section-title">Current Openings</h2>
                {{!-- <p class="tm-color-white tm-section-subtitle">We are here to help you! --}}
                <p>
                    {{!-- <a href="#" class="tm-color-white tm-btn-white-bordered">Subscribe Newletters</a> --}}
            </div>
        </div>
    </div>
</div>
<div class="tm-section-2"></div>


<div class="tm-section tm-section-pad tm-bg-gray" id="tm-section-4">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8">
                {{#each posts}}
                <div class="tm-article-carousel">
                    <article class="tm-bg-white mr-2 tm-carousel-item">
                        <div class="tm-article-pad">
                            <header>
                                <h3 class="text-uppercase tm-article-title-2">{{title}}</h3>
                                <h6>Salary: ${{salary}}</h6>
                                <h6>Technologies: {{category.category_name}}</h6>
                            </header>
                            <h6>Description:</h6>
                            <p>{{description}}</p>
                            <a href="mailto:test@gmail.com" class="text-uppercase btn-primary tm-btn-primary">Submit
                                Resume</a>
                        </div>
                    </article>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>